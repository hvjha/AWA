USE ROLE ACCOUNTADMIN;
USE WAREHOUSE COMPUTE_WH;
CREATE DATABASE IF NOT EXISTS keysinsql_db;
CREATE SCHEMA IF NOT EXISTS keysinsql_schema;
USE DATABASE keysinsql_db;
USE SCHEMA keysinsql_schema;

--college enrollment system

/*
you are designing a simple college enrollment system for university.The System manages students, courses,departents,and enrollments.
your goal is to:
1.maintain data integrity
2.Avoid duplicate data
3.Establish relationships between entities

Entities Involved
1.students(student info)
2.Departments (college department)
3.Courses(offered under department
4.Enrollments(which students enroll in which courses))
*/
--LETS START WITH STUDENT DATA
CREATE TABLE IF NOT EXISTS student_data(
    student_id INT,
    student_name VARCHAR(50),
    student_phn VARCHAR(50),
    student_age INT,
    student_gender VARCHAR(20),
    PRIMARY KEY (student_id),
    Unique (student_phn)
);
DROP TABLE student_data;
describe table student_data;
